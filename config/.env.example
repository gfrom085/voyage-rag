# ============================================
# VOYAGE RAG - ENVIRONMENT VARIABLES
# ============================================

# ============ Voyage AI ============
# Get your API key at: https://www.voyageai.com
# Free tier: 100M tokens/month
VOYAGE_API_KEY=vo-your-api-key-here

# ============ API Keys ============
# Comma-separated list of API keys for client authentication
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_KEYS=key1-xxx-xxx-xxx,key2-yyy-yyy-yyy,key3-zzz-zzz-zzz

# ============ CORS Configuration ============
# Comma-separated list of allowed origins for CORS
# Use "*" for development, specific domains for production
CORS_ORIGINS=https://app.example.com,https://dashboard.example.com

# ============ Domain Configuration ============
# Your domain for the API (used by Traefik for routing and SSL)
DOMAIN=rag.example.com

# ============ Let's Encrypt ============
# Email for Let's Encrypt certificate notifications
ACME_EMAIL=you@example.com

# ============ Traefik Dashboard Authentication ============
# Generate with: htpasswd -nb admin yourpassword
# Or: python -c "from passlib.apache import HtpasswdFile; h = HtpasswdFile(); h.set_password('admin', 'yourpassword'); print(h.to_string().decode())"
# IMPORTANT: Escape $ characters by doubling them ($$)
# Example: admin:$apr1$xyz123... becomes admin:$$apr1$$xyz123...
TRAEFIK_DASHBOARD_AUTH=admin:$$apr1$$xyz123...

# ============ Optional: Rate Limiting ============
# Requests per minute per API key (default: 100)
RATE_LIMIT_REQUESTS=100

# Time window for rate limiting in seconds (default: 60)
RATE_LIMIT_WINDOW=60

# ============ Optional: Logging ============
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ============ Optional: Cache Configuration ============
# Enable query caching (default: true)
ENABLE_CACHE=true

# Cache TTL in seconds (default: 3600 = 1 hour)
CACHE_TTL=3600

# ============ Optional: Model Configuration ============
# Default model for embeddings (voyage-3 or voyage-3-lite)
DEFAULT_MODEL=voyage-3-lite

# Batch size for embedding requests (default: 128, max: 128)
EMBEDDING_BATCH_SIZE=128

# ============ Optional: FAISS Configuration ============
# FAISS index type: HNSW or Flat (default: HNSW)
FAISS_INDEX_TYPE=HNSW

# HNSW parameter: links per node (default: 64, recommended: 32-64)
FAISS_HNSW_M=64

# HNSW parameter: construction quality (default: 200, recommended: 100-500)
FAISS_HNSW_EF_CONSTRUCTION=200

# HNSW parameter: search quality (default: 128, recommended: 64-256)
FAISS_HNSW_EF_SEARCH=128

# ============ Optional: Monitoring ============
# Enable monitoring and metrics collection (default: true)
ENABLE_MONITORING=true

# Metrics file path (default: data/metrics.json)
METRICS_FILE=data/metrics.json
